texture2D diffuseMap : register( s0 );

sampler2D diffuseSampler = sampler_state
{
	texture = <diffuseMap>;
	mipfilter = LINEAR;
};

struct InputPS
{
	float2 TC:		TEXCOORD0;
};

struct OutputPS
{
	float4 Color:	COLOR0;
};

OutputPS main(InputPS In)
{
	OutputPS outPS;
	outPS.Color = tex2D(diffuseSampler, In.TC);
	return outPS;
}
